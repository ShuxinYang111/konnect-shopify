{{ 'section-konnect-services.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<section 
  id="services"
  class="konnect-services color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding"
>
  <div class="konnect-services__container page-width">
    
    {%- unless section.settings.title == blank -%}
      <div class="konnect-services__header">
        <h2 class="konnect-services__title {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
        {%- if section.settings.description != blank -%}
          <p class="konnect-services__description">
            {{ section.settings.description }}
          </p>
        {%- endif -%}
      </div>
    {%- endunless -%}

    <div class="konnect-services__grid grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'service' -%}
            <div class="konnect-services__item" {{ block.shopify_attributes }}>
              <div class="konnect-services__card">
                
                {%- if block.settings.icon != blank -%}
                  <div class="konnect-services__icon konnect-services__icon--{{ block.settings.icon }}">
                    {%- case block.settings.icon -%}
                      {%- when 'video' -%}
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <polygon points="23 7 16 12 23 17 23 7"></polygon>
                          <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
                        </svg>
                      {%- when 'users' -%}
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                          <circle cx="9" cy="7" r="4"></circle>
                          <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                          <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                      {%- when 'palette' -%}
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <circle cx="13.5" cy="6.5" r=".5"></circle>
                          <circle cx="17.5" cy="10.5" r=".5"></circle>
                          <circle cx="8.5" cy="7.5" r=".5"></circle>
                          <circle cx="6.5" cy="12.5" r=".5"></circle>
                          <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.926 0 1.648-.746 1.648-1.688 0-.437-.18-.835-.437-1.125-.29-.289-.438-.652-.438-1.125a1.64 1.64 0 0 1 1.668-1.668h1.996c3.051 0 5.555-2.503 5.555-5.554C21.965 6.012 17.461 2 12 2z"></path>
                        </svg>
                      {%- else -%}
                        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <circle cx="12" cy="12" r="10"></circle>
                          <path d="M8 12l2 2 4-4"></path>
                        </svg>
                    {%- endcase -%}
                  </div>
                {%- endif -%}

                <div class="konnect-services__content">
                  {%- if block.settings.title != blank -%}
                    <h3 class="konnect-services__card-title">
                      {{ block.settings.title }}
                    </h3>
                  {%- endif -%}

                  {%- if block.settings.description != blank -%}
                    <p class="konnect-services__card-description">
                      {{ block.settings.description }}
                    </p>
                  {%- endif -%}

                  {%- if block.settings.link_text != blank and block.settings.link_url != blank -%}
                    <a href="{{ block.settings.link_url }}" class="konnect-services__card-link">
                      {{ block.settings.link_text }}
                      <svg class="konnect-services__card-link-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                      </svg>
                    </a>
                  {%- endif -%}
                </div>
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

