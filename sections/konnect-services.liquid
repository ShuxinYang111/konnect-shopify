      "label": "Top padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "options": [
            {
              "value": "video",
              "label": "Video"
            },
            {
              "value": "users",
              "label": "Users"
            },
            {
              "value": "palette",
              "label": "Palette"
            }
          ],
          "default": "video",
          "label": "Icon"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "default": "Service Title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "default": "Service description goes here.",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "link_text",
          "default": "Learn more",
          "label": "Link text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Konnect Services Section",
      "blocks": [
        {
          "type": "service",
          "settings": {
            "icon": "video",
            "title": "AI Video Production",
            "description": "Create commercial-grade videos with AI creation engines."
          }
        },
        {
          "type": "service",
          "settings": {
            "icon": "users",
            "title": "AI Digital Human",
            "description": "High-fidelity virtual presenters and voiceovers in multiple languages."
          }
        },
        {
          "type": "service",
          "settings": {
            "icon": "palette",
            "title": "AI Image & Design",
            "description": "Fast, on-brand visuals powered by AI and a pro creative team."
          }
        }
      ]
    }
  ]
}
{% endschema %}
